{
  "designSystem": {
    "colors": {
      "primary": "#7C5CFC",
      "secondary": "#F4F4F4",
      "background": "#F8F8F8",
      "textPrimary": "#2C2C2C",
      "textSecondary": "#9B9B9B",
      "accent": "#FF7043",
      "border": "#E0E0E0",
      "white": "#FFFFFF",
      "progressBar": "#A192F8"
    },
    "typography": {
      "fontFamily": "Inter, sans-serif",
      "heading": {
        "fontSize": "24px",
        "fontWeight": "700"
      },
      "subheading": {
        "fontSize": "18px",
        "fontWeight": "600"
      },
      "body": {
        "fontSize": "14px",
        "fontWeight": "400"
      },
      "caption": {
        "fontSize": "12px",
        "fontWeight": "400"
      }
    },
    "spacing": {
      "paddingSmall": "8px",
      "paddingMedium": "16px",
      "paddingLarge": "24px",
      "gapSmall": "8px",
      "gapMedium": "16px",
      "gapLarge": "24px"
    },
    "components": {
      "button": {
        "borderRadius": "8px",
        "padding": "12px 24px",
        "fontWeight": "600",
        "background": "primary",
        "color": "white"
      },
      "card": {
        "borderRadius": "16px",
        "padding": "16px",
        "background": "white",
        "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.05)"
      },
      "sidebar": {
        "background": "white",
        "width": "260px",
        "padding": "16px",
        "borderRight": "1px solid #E0E0E0"
      },
      "navbar": {
        "background": "white",
        "padding": "16px",
        "borderBottom": "1px solid #E0E0E0"
      },
      "avatar": {
        "borderRadius": "50%",
        "size": "40px"
      },
      "progressBar": {
        "height": "6px",
        "borderRadius": "3px",
        "background": "#E0E0E0",
        "fillColor": "progressBar"
      }
    },
    "icons": {
      "size": "24px",
      "color": "textPrimary"
    },
    "borderRadius": {
      "small": "8px",
      "medium": "16px",
      "large": "24px"
    }
  }
}
