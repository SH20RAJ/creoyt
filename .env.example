# Database Configuration (Turso - replaces Cloudflare D1)
TURSO_DB_URL="libsql://your-database-name.turso.io"
TURSO_DB_TOKEN="your-turso-auth-token"

# Authentication (Stack Auth)
NEXT_PUBLIC_STACK_PROJECT_ID="your-stack-project-id"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="your-stack-client-key"
STACK_SECRET_SERVER_KEY="your-stack-server-key"

# AI Configuration
OPENROTATE_API_KEY="your-openrotate-key"
OPENAI_API_KEY="your-openai-key"

# Google OAuth (YouTube Integration)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/youtube/callback"

# Application Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3003"
NODE_ENV="development"

# Optional Configuration
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="3600"
ANALYTICS_ENABLED="true"

# Development Only
DEBUG_MODE="true"
LOG_LEVEL="info"
